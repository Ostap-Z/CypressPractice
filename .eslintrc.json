{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/**/*.js"
  ],
  "rules": {
    "camelcase": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-classes-per-file": [
      "error",
      3
    ],
    "max-len": [
      "error",
      {
          "code": 79,
          "comments": 72,
          "ignoreUrls": true,
          "ignoreRegExpLiterals": true,
          "ignoreTemplateLiterals": true
      }
    ],
    "no-multiple-empty-lines": [
      "error", 
      {
        "max": 2, 
        "maxBOF": 0,
        "maxEOF": 0
      }
    ],
    "eol-last": [
      "error", "always"
    ],
    "space-before-function-paren": [
      "error", 
      "always"
    ]
  }
}